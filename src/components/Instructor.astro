---
import { Image } from "astro:assets";
import { Icon } from "astro-icon";

export interface Props {
  image: string;
  name: string;
  specialties: string;
  github: string;
  lattes: string;
}

const { image, name, specialties, github, lattes } = Astro.props;
---

<div class="flex rounded-xl border border-slate-200 p-6 bg-white shadow-md hover:shadow-lg transition-all duration-300">
  <Image
    class="rounded-full bg-slate-100 shrink-0"
    src={image}
    width={160}
    height={160}
    alt={name}
  />
  <div class="ml-6 flex flex-col gap-4">
    <p class="text-xl font-bold text-slate-900">{name}</p>
    <p class="text-sm text-slate-600 leading-relaxed">Áreas favoritas: {specialties}</p>
    <div class="flex gap-3 mt-auto">
      <a href={github} target="_blank" rel="noopener" class="transition-all duration-300 hover:scale-110" title="GitHub">
        <Icon
          name="mdi:github"
          class="w-12 rounded-full bg-gradient-to-br from-cyan-500 to-blue-500 p-2 text-white"
        />
      </a>
      <a href={lattes} target="_blank" rel="noopener" class="transition-all duration-300 hover:scale-110" title="Currículo Lattes">
        <Icon
          name="mdi:school-outline"
          class="w-12 rounded-full bg-gradient-to-br from-cyan-500 to-blue-500 p-2 text-white"
        />
      </a>
    </div>
  </div>
</div>
